<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#F6FAFF">

        <!-- Header với nút Back và tiêu đề -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#22385C"
                    android:contentDescription="Back"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thống kê giảng dạy"
                    android:textColor="#22385C"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="24dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tiêu đề con -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Báo cáo giảng dạy"
            android:textColor="#62A9E7"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="22dp"/>

        <!-- Text tiêu đề - Lớp học phần -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lớp học phần"
            android:textColor="#262626"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <!-- TableLayout Lớp học phần -->
        <TableLayout
            android:id="@+id/tableClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Text tiêu đề - Giảng viên -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giảng viên"
            android:textColor="#262626"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="12dp"/>

        <!-- TableLayout Giảng viên -->
        <TableLayout
            android:id="@+id/tableTeachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
