<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/screen_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Trang chủ"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/rowSchedule"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_round"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:src="@drawable/ic_calendar"
                android:tint="@color/primary_blue"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Lịch học"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowContent"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_round"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:src="@drawable/ic_document"
                android:tint="@color/primary_blue"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Nội dung bài giảng"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_round"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:src="@drawable/ic_bell"
                android:tint="@color/primary_blue"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Thông báo"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowProgress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_round"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_chart"
                android:tint="@color/primary_blue"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Tiến độ học tập"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
