<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Mã lớp -->
        <TextView
            android:id="@+id/tvClassCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã lớp: IT1234"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- Môn học -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Môn: Cấu trúc dữ liệu"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#22385C" />

        <!-- Sĩ số -->
        <TextView
            android:id="@+id/tvStudentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sĩ số: 73/81"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#22385C" />

        <!-- Tình trạng -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình trạng: Đang dạy"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#22385C" />

        <!-- Tiến độ -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiến độ: 80%"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#22385C" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
